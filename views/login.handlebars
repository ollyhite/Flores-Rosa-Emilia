<div class="row justify-content-center">
  <div class="card col-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">{{translation.Login}}</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signup" type="button" role="tab" aria-controls="signup" aria-selected="false">{{translation.Signup}}</button>
      </li>
    </ul>
  
  <div class="tab-content" id="myTabContent">  
    <!-- Login tab -->
    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">{{translation.Email}}</label><br />
          <input class="form-input" type="text" id="email-login" /><br />
        </div>
        <div class="form-group">
          <label for="password-login">{{translation.Password}}</label><br />
          <input class="form-input" type="password" id="password-login" /><br />
        </div>
        <div class="form-group">
          <button class="button btn-primary mt-3" type="submit">{{translation.Login}}</button>
        </div>
      </form>
    </div>

    <!-- Signup tab -->
    <div class="tab-pane fade" id="signup" role="tabpanel" aria-labelledby="signup-tab">
      <form class="form signup-form">
        <div class="form-group">
          <label for="username-signup">{{translation.Username}}</label><br />
          <input class="form-input" type="text" id="username-signup" /><br />
        </div>
        <div class="form-group">
          <label for="email-signup">{{translation.Email}}</label><br />
          <input class="form-input" type="text" id="email-signup" /><br />
        </div>
        <div class="form-group">
          <label for="password-signup">{{translation.Password}}</label><br />
          <input class="form-input" type="password" id="password-signup" /><br />
        </div>
        <div class='form-group'>
          <button class="button btn-primary mt-3" type="submit">{{translation.Signup}}</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>